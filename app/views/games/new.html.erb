<div class="container">
  <h1>New Game</h1>

  <div id="menu">
    <ul>
      <%@letters.each do |letter| %>
      <li class="btn btn-primary"><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <form action="/score" method="post" data-turbo="false" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>

  <p>What is the longest word you can find ?</p>
    <div class="input-group custom-search">
      <input type="text" name="word" class="form-control custom-search-input">
      <input type="submit" value="Play" class="btn btn-white custom-search-botton">

    </div>
  </form>
</div>
